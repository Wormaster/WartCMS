{% extends 'base.html.twig' %}    {% block title %}        <title>{{ cat.seotitle }} - {{ sitename }}</title>    {% endblock %}{% block headimage %}    <div class="page_image right"><img src="/templates/{{ templatefolder }}/images/materials_img.jpg" alt=""></div>{% endblock %}{% block crumbs %}    <div class="breadcrumbs block">        <a href="/">Главная</a> <span class="sep">></span>Материалы    </div>{% endblock %}{% block sectionclass %}{% endblock %}{% block content %}		<div class="gallery block" id="materials">			<div class="block_title">Используемые нами материалы</div>			<div class="jcarousel">                <ul class="items carousel">                    {% for item in items %}                        {% if loop.index0 == 0 or loop.index0%6 == 0 %}                            <li class="caruselli">                        {% endif %}                        <div class="item left">                            <div class="wrap">                                <div class="image">                                    <a class="fancy" href="/images/{{ item.imagefolder }}/{{  item.matimg.0.image }}">                                        <img src="/images/{{ item.imagefolder }}/thumbs/{{ item.matimg.0.thumb }}" alt="">                                    </a>                                </div>                                <!--<div class="image"><img src="/images/{{ item.imagefolder }}/thumbs/{{ item.matimg.0.thumb }}" alt=""></div>-->                                <div class="name">{{ item.name }}</div>                            </div>                            <!--<div class="material_info">                                <div class="title">{{ item.name }}</div>                                <div class="text_block">                                    <p>{{ item.matdescr | raw }}</p>                                    <div class="mini_gallery">                                        <div class="items">                                            {% for img in item.matimg | slice(0,3) %}                                                <div class="item left"><a class="fancy" href="/images/{{ item.imagefolder }}/{{ img.image }}"><img src="/images/{{ item.imagefolder }}/thumbs/{{ img.thumb }}" alt=""></a></div>                                            {% endfor %}                                            <div class="clear"></div>                                        </div>                                    </div>                                </div>                            </div>-->                        </div>                        {% if ((loop.index0+1)%6 == 0 and loop.index0 != 0) or loop.last %}                            </li>                        {% endif %}                    {% endfor %}                </ul>			</div>            <div class="jcarousel-navi">                <a class="jcarousel-prev" href="#"><</a>                <div class="jcarousel-pagination">                </div>                <a class="jcarousel-next" href="#">></a>            </div>                <div class="clear"></div>		</div>        {% if furniture != '' %}        <div class="gallery block" id="funiture">            <div class="block_title">Используемая нами фурнитура</div>            <div class="jcarousel">                <ul class="items carousel">                    {% for item in furniture %}                        {% if loop.index0 == 0 or loop.index0%3 == 0 %}                            <li class="caruselli">                        {% endif %}                        <div class="item left">                            <div class="wrap">                                <div class="image">                                    <a class="fancy" href="/images/{{ item.imagefolder }}/{{  item.matimg.0.image }}">                                        <img src="/images/{{ item.imagefolder }}/thumbs/{{ item.matimg.0.thumb }}" alt="">                                    </a>                                </div>                                <div class="name">{{ item.name }}</div>                            </div>                            <!--<div class="material_info">                                <div class="title">{{ item.name }}</div>                                <div class="text_block">                                    <p>{{ item.matdescr | raw }}</p>                                    <div class="mini_gallery">                                        <div class="items">                                            {% for img in item.matimg | slice(0,3) %}                                                <div class="item left"><a class="fancy" href="/images/{{ item.imagefolder }}/{{ img.image }}"><img src="/images/{{ item.imagefolder }}/thumbs/{{ img.thumb }}" alt=""></a></div>                                            {% endfor %}                                            <div class="clear"></div>                                        </div>                                    </div>                                </div>                            </div>-->                        </div>                        {% if ((loop.index0+1)%3 == 0 and loop.index0 != 0) or loop.last %}                            </li>                        {% endif %}                    {% endfor %}                </ul>            </div>            <div class="jcarousel-navi">                <a class="jcarousel-prev" href="#"><</a>                <div class="jcarousel-pagination">                </div>                <a class="jcarousel-next" href="#">></a>            </div>            <div class="clear"></div>        </div>        {% endif %}		<div class="text_block">            <h1>{{ text.name }}</h1>			<p>{{ text.article | raw}}</p>		</div>{% endblock %}{% block scripts %}    {{ parent() }}    <script src="/templates/{{ templatefolder }}/js/jquery.jcarousel.min.js"></script>    <script>        $(function(){           $('.jcarousel').jcarousel();            $('.jcarousel-prev').jcarouselControl({                target: '-=1'            });            $('.jcarousel-next').jcarouselControl({                target: '+=1'            });            var pagination1 = $('.jcarousel-pagination');            pagination1                    .on('jcarouselpagination:active', 'a', function() {                        $(this).addClass('active');                    })                    .on('jcarouselpagination:inactive', 'a', function() {                        $(this).removeClass('active');                    });            pagination1.jcarouselPagination();            /*            До поры до времени...            $('.gallery .item .wrap').on(eventName, function(){                $('.material_info').hide();                window.firstClick = true;                $(this).next().fadeIn();            });            //Закрываем всплывашку при клике вне элемента            $(document).click(function(e){                if (!window.firstClick && $(e.target).closest('.material_info').length == 0){                    $('.material_info').fadeOut(300);                }                window.firstClick = false;            });*/        });    </script>{% endblock %}