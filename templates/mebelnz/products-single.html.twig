{% extends 'base.html.twig' %}    {% block title %}        {% if item.seotitle == '' %}            <title>{{ item.name }} - {{ sitename }}</title>        {% else %}            <title>{{ item.seotitle }}</title>        {% endif %}    {% endblock %}{% block headimage %}    <div class="page_image right"><img src="/templates/{{ templatefolder }}/images/product_img.jpg" alt=""></div>{% endblock %}{% block crumbs %}    <div class="breadcrumbs block">        <a href="/">Главная</a> <span class="sep">></span>        <a href="/catalog">Каталог</a><span class="sep">></span>        <a href="/catalog/{{ cat.alias }}">{{ cat.name }}</a><span class="sep">></span>{{ item.name }}    </div>{% endblock %}{% block sectionclass %}{% endblock %}{% block content %}		<div class="product_info block">			<div class="images left">                {% for thumbs in item.photo | slice(0,1)%}                    <div class="big"><a class="fancy" href="/images/{{ item.imagefolder }}/{{ thumbs.image }}"><img src="/images/{{ item.imagefolder }}/{{ thumbs.image }}" alt=""></a></div>                {% endfor %}				<div class="small">                    {% for thumbs in item.photo | slice(0,3)%}                        <a href="/images/{{ item.imagefolder }}/{{ thumbs.image }}"><img src="/images/{{ item.imagefolder }}/thumbs/{{ thumbs.thumb }}" alt=""></a>                        {% endfor %}					<div class="clear"></div>				</div>			</div>						<div class="info right">				<h1>{{ item.name }}</h1>								<div class="features">					<ul>						<li>							<div class="icon left"><img src="/templates/{{ templatefolder }}/images/features1_icon.png" alt=""></div>							<div class="text right">								<div class="name left">Ширина</div>								<div class="val right">до {{ item.width }}</div>								<div class="clear"></div>							</div>							<div class="clear"></div>						</li>						<li>							<div class="icon left"><img src="/templates/{{ templatefolder }}/images/features2_icon.png" alt=""></div>							<div class="text right">								<div class="name left">Высота</div>								<div class="val right">до {{ item.height }}</div>								<div class="clear"></div>							</div>							<div class="clear"></div>						</li>						<li>							<div class="icon left"><img src="/templates/{{ templatefolder }}/images/features3_icon.png" alt=""></div>							<div class="text right">								<div class="name left">Глубина</div>								<div class="val right">{{ item.depth }}</div>								<div class="clear"></div>							</div>							<div class="clear"></div>						</li>						<li>							<div class="icon left"><img src="/templates/{{ templatefolder }}/images/features4_icon.png" alt=""></div>							<div class="text right">								<div class="name left">Срок изготовления</div>								<div class="val right">{{ item.time }}</div>								<div class="clear"></div>							</div>							<div class="clear"></div>						</li>						<li>							<div class="icon left"><img src="/templates/{{ templatefolder }}/images/features5_icon.png" alt=""></div>							<div class="text right">								<div class="name left">Стоимость</div>								<div class="val right">от <b>{{ item.price }}</b></div>								<div class="clear"></div>							</div>							<div class="clear"></div>						</li>					</ul>				</div>								<a href="#order_form-{{ item.id }}" class="buy_link fancy">Заказать</a>				<a href="#consult_form" class="consult_link fancy">Консультация</a>			</div>			<div class="clear"></div>		</div>	    {% if  item.description != ''%}		<div class="text_block">			<h1>Описание</h1>			<p>{{ item.description | raw}}</p>		</div>        {% endif %}		{% if item.interrior %}		<div class="block mini_gallery">			<div class="block_title">{{ item.name }} в интерьере:</div>			<div class="items">                {% for image in item.interrior | slice(0,4)%}                    <div class="item left"><a class="fancy" href="/images/{{ item.imagefolder }}/{{ image.image }}"><img src="/images/{{ item.imagefolder }}/thumbs/{{ image.thumb }}" alt=""></a></div>                {% endfor %}				<div class="clear"></div>			</div>		</div>        {% endif %}		{% if item.similar != 'N;' %}		<div class="related_products">			<div class="block_title">Вам так же могут подойти</div>			<div class="items">                {% for obj in item.similar %}                    <div class="item left">                        <a href="/catalog/{{ obj.cat_alias }}/{{ obj.alias }}">                            <div class="image"><img src="/images/{{ obj.imagefolder }}/thumbs/{{ obj.photo.0.thumb }}" alt="{{ obj.name }}"></div>                            <div class="name">{{ obj.name }}</div>                        </a>                    </div>                {% endfor %}				<div class="clear"></div>			</div>		</div>        {% endif %}{% endblock %}{% block modals %}    {{ parent() }}    <div class="modal" id="order_form-{{ item.id }}">        <div class="modal_title"><p>Готовы сделать заказ?</p></div>        <div class="content">            <div class="order_prod_info left">                <div class="title">Заполните форму и наш специалист<br> свяжется с Вами для оформления<br> заказа</div>                <div class="image"><img src="/images/{{ item.imagefolder }}/thumbs/{{ item.photo.0.thumb }}" alt="{{ item.alias }}" alt="Заказ - {{ item.name }}" width="326"></div>                <div class="name">{{ item.name }}</div>            </div>            <form class="form right" method="post" action="">                <input type="hidden" name="formtype" value="order"/>                <input type="hidden" name="itemid" value="{{ item.id }}"/>                <div class="line">                    <input class="input" type="text" name="name" value="" placeholder="Ваше имя" required="">                </div>                <div class="line">                    <input class="input" type="email" name="email" value="" placeholder="Ваша почта" required="">                </div>                <div class="line">                    <input class="input" type="tel" name="phone" value="" placeholder="Ваш телефон" required="" pattern="\d{11}">                </div>                <div class="line">                    <textarea name="message" placeholder="Ваш вопрос"></textarea>                </div>                <div class="submit">                    <input class="submit_btn" type="submit" name="submit" value="Отправить">                </div>            </form>            <div class="clear"></div>        </div>    </div>    <div class="modal" id="consult_form">        <div class="modal_title">            <p>Нужна консультация?</p>            <p class="desc">Заполните форму ниже и наши<br> специалисты с радостью ответят!</p>        </div>        <div class="content">            <form class="form" method="post" action="">                <input type="hidden" name="formtype" value="consult"/>                <div class="line">                    <input class="input" type="text" name="name" value="" placeholder="Ваше имя" required="">                </div>                <div class="line">                    <input class="input" type="email" name="email" value="" placeholder="Ваша почта" required="">                </div>                <div class="line">                    <input class="input" type="tel" name="phone" value="" placeholder="Ваш телефон 88001234567" required="" pattern="\d{11}">                </div>                <div class="line">                    <textarea name="message" placeholder="Ваш вопрос"></textarea>                </div>                <div class="submit">                    <input class="submit_btn" type="submit" name="submit" value="Отправить">                </div>            </form>        </div>    </div>{% endblock %}