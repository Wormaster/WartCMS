{% extends 'base.html.twig' %}        {% block title %}            {% if text.seotitle != '' %}                <title>{{ text.seotitle }}</title>            {% else %}                <title>{{ text.name }} - {{ sitename }}</title>            {% endif %}        {% endblock %}{% block headimage %}    <div class="page_image right"><img src="/templates/{{ templatefolder }}/images/catalog_img.jpg" alt=""></div>{% endblock %}{% block crumbs %}    <div class="breadcrumbs block">        <a href="/">Главная</a> <span class="sep">></span>        <span class="sep">Каталог</span>    </div>{% endblock %}{% block sectionclass %}catalog{% endblock %}{% block content %}		<div class="products block">			<div class="items">                {% for item in categories %}                    <div class="product left">                        <div class="image"><a href="/catalog/{{ item.alias }}"><img src="/images/categories/{{ item.image.0.image }}" width="287" height="219" alt="{{ item.name }}"></a></div>                        <div class="name left"><a href="/catalog/{{ item.alias }}">{{ item.name }}</a></div>                        <div class="clear"></div>                    </div>                    {% endfor %}								<div class="clear"></div>			</div>        </div>		<div class="text_block">			<h1>{{ text.name }}</h1>            <p>{{ text.article | raw }}</p>        </div>{% endblock %}