{% extends 'base.html.twig' %}            {% block title %}                {% if cat.seotitle != '' %}                    <title>{{ cat.seotitle }}</title>                {% else %}                    <title>{{ cat.name }} - {{ sitename }}</title>                {% endif %}            {% endblock %}{% block headimage %}    <div class="page_image right"><img src="/templates/{{ templatefolder }}/images/catalog_img.jpg" alt=""></div>{% endblock %}{% block crumbs %}    <div class="breadcrumbs block">        <a href="/">Главная</a> <span class="sep">></span>        <a href="/catalog">Каталог</a><span class="sep">></span>{{ cat.name }}    </div>{% endblock %}{% block sectionclass %}{% endblock %}{% block content %}		<div class="products block">			<div class="items">                {% for item in items %}                    <div class="product left">                        <div class="image"><a href="/catalog/{{ cat.alias }}/{{ item.alias }}"><img src="/images/{{ item.imagefolder }}/thumbs/{{ item.photo.0.thumb }}" alt="{{ item.alias }}" width="287" height="219"/></a></div>                        <div class="name left"><a href="/catalog/{{ cat.alias }}/{{ item.alias }}">{{ item.name }}</a></div>                        <div class="price right">{{ item.price }}р</div>                        <div class="clear"></div>                        <a class="buy_link fancy" href="#order_form-{{ item.id }}">Заказать</a>                    </div>                {% else %}                <div class="product left">                    <p>К сожалению товаров в данной категории пока нет.</p>                    </div>                {% endfor %}								<div class="clear"></div>			</div>        </div>		<div class="text_block">			<h1>{{ cat.name }}</h1>            <p>{{ cat.description | raw }}</p>        </div>{% endblock %}{% block modals %}    {{ parent() }}    {% for item in items %}    <div class="modal" id="order_form-{{ item.id }}">        <div class="modal_title"><p>Готовы сделать заказ?</p></div>        <div class="content">            <div class="order_prod_info left">                <div class="title">Заполните форму и наш специалист<br> свяжется с Вами для оформления<br> заказа</div>                <div class="image"><img src="/images/{{ item.imagefolder }}/thumbs/{{ item.photo.0.thumb }}" alt="{{ item.alias }}" alt="Заказ - {{ item.name }}" width="326"></div>                <div class="name">{{ item.name }}</div>            </div>            <form class="form right" method="post" action="">                <input type="hidden" name="formtype" value="order"/>                <input type="hidden" name="itemid" value="{{ item.id }}"/>                <div class="line">                    <input class="input" type="text" name="name" value="" placeholder="Ваше имя" required="">                </div>                <div class="line">                    <input class="input" type="email" name="email" value="" placeholder="Ваша почта" required="">                </div>                <div class="line">                    <input class="input" type="tel" name="phone" value="" placeholder="Ваш телефон 88001234567" required="" pattern="\d{11}">                </div>                <div class="line">                    <textarea name="message" placeholder="Ваш вопрос"></textarea>                </div>                <div class="submit">                    <input class="submit_btn" type="submit" name="submit" value="Отправить">                </div>            </form>            <div class="clear"></div>        </div>    </div>        {% endfor %}{% endblock %}