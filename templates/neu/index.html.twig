{% extends 'base.html.twig' %}
{% block script %}
    <script>
        // Counters
        $({countNum: $('#new-users').text()}).animate({countNum: {{ today.hits }}}, {
            duration: 3000,
            easing:'linear',
            step: function() {
                $('#new-users').text(Math.round(this.countNum));
            }

        });
        $({countNum: $('#new-comments').text()}).animate({countNum: {{ today.hosts }} }, {
            duration: 3500,
            easing:'linear',
            step: function() {
                $('#new-comments').text(Math.round(this.countNum));
            }

        });
